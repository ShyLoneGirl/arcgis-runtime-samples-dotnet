<UserControl
    x:Class="ArcGISRuntime.UWP.Samples.KmlNodeVisibility.KmlNodeVisibility"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:esriUI="using:Esri.ArcGISRuntime.UI.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Button Content="Toggle ScreenOverlays On/Off" Click="ScreenOverlaysOnOff_Clicked"/>
            <Button Content="Toggle GroundOverlays On/Off" Click="GroundOverlaysOnOff_Clicked"/>
            <Button Content="Toggle Placemarks On/Off" Click="PLacemarksOnOff_Clicked"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <esriUI:SceneView x:Name="MySceneView"/>
        </Grid>
    </Grid>
</UserControl>